{% extends 'base.html.twig' %}

{% block body_attributes %}
    class="primary-background"
{% endblock %}

{% block body %}
    <main class="login-main">
        <form method="post" class="login-panel">

            {% if error %}
                <div class="alert alert-danger">Identifiants invalides</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Tu es connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}


            <img class="login-panel-logo" src="{{ asset('img/logo.png') }}">
            <h1 class="h3">Bienvenue sur votre espace de formation</h1>
            <label for="username">Email</label>
            <input class="textfield" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">Mot de passe</label>
            <input class="textfield" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
            <button class="btn login-btn utility-color" type="submit">Se connecter</button>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}
        </form>
    </main>
{% endblock %}